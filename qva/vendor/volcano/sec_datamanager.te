type vendor_hal_datamanager_qti_exec, exec_type, vendor_file_type, file_type;

# Allow for transition from init domain to vendor_hal_datamanager_qti
init_daemon_domain(vendor_hal_datamanager_qti)

#use bypass to allow netadmin, socket, etc permissions
hal_server_domain_bypass(vendor_hal_datamanager_qti, vendor_hal_datamanager)

# Allow vendor_hal_datamanager_qti to use Binder IPC
binder_use(vendor_hal_datamanager_qti)
hal_attribute_service(vendor_hal_datamanager, vendor_hal_datamanager_aidl_service)

binder_call(vendor_hal_datamanager_client, vendor_hal_datamanager_server)
binder_call(vendor_hal_datamanager_server, vendor_hal_datamanager_client)

unix_socket_connect(vendor_hal_datamanager_qti, vendor_ssgtzd, vendor_ssgtzd)

allow vendor_hal_datamanager_qti proc_meminfo:file { r_file_perms };
allow vendor_hal_datamanager_qti proc_net:file { r_file_perms };
allow vendor_hal_datamanager_qti proc_stat:file { r_file_perms };
allow vendor_hal_datamanager_qti system_data_root_file:dir { r_dir_perms };

allow vendor_hal_datamanager_qti vendor_sec_vndr_data_file:dir { rw_dir_perms };
allow vendor_hal_datamanager_qti vendor_sec_vndr_data_file:file { create_file_perms };

allow vendor_hal_datamanager_qti vendor_persist_sec_file:dir create_dir_perms;
allow vendor_hal_datamanager_qti vendor_persist_sec_file:file create_file_perms;

allow vendor_hal_datamanager_qti mnt_vendor_file:dir search;

set_prop(vendor_hal_datamanager_qti, vendor_secdm_prop);

hal_client_domain(vendor_hal_datamanager_qti, vendor_hal_cloudagent)
get_prop(vendor_hal_datamanager_qti, vendor_mink_trace_prop)
